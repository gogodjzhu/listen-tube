    "version": "0.2.0",
    "configurations": [
        // go run main.go
        {
            "name": "go run main.go",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": ["restful", "-c", "${workspaceFolder}/configs/default.yml"],
        },
        // npm run dev
        {
            "name": "npm run dev",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/frontend",
        },
    ]
}